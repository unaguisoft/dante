<%= form_for @property do |f| %>

<div class="row">
  <div class="col-md-12">
    <fieldset class="form-group">
      <%= f.submit 'Guardar propiedad', class: 'btn btn-success', data: { 'disable-with' => 'Guardando...' } %>
    </fieldset>
  </div>
</div>
<article>
  <section>
    <div class="row">
      <div class="col-md-8">
        <div class="row">
          <div class="col-md-12">
            <%= render partial: 'properties/form/general_data',
                  locals: { f: f, property: @property } %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= render partial: 'properties/form/distribution_data',
                    locals: { f: f, property: @property }%>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= render partial: 'properties/form/features',
                  locals: { f: f, property: @property }%>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="row">
          <div class="col-md-12">
            <%= render partial: 'properties/form/financial_data',
                  locals: { f: f, property: @property }%>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= render partial: 'properties/form/construction_data',
                  locals: { f: f, property: @property }%>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= render partial: 'properties/form/public_data',
                  locals: { f: f, property: @property }%>
          </div>
        </div>
      </div>
    </div>
  </section>
</article>

<div class="row">
  <div class="col-md-12">
    <fieldset class="form-group">
      <%= f.submit 'Guardar propiedad', class: 'btn btn-success', data: { 'disable-with' => 'Guardando...' } %>
    </fieldset>
  </div>
</div>

<% end %>
