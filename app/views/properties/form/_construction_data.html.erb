<div class="box box-primary">

  <div class="box-header with-border">
    <h3 class="box-title">
      <span class="fa fa-home"></span>
      Información Catastral
    </h3>
  </div>

  <div class="box-body">

    <div class="row">
      <div class="col-md-6">
        <fieldset class="form-group">
          <%= f.label :built_area %>
          <%= f.number_field :built_area, class: 'form-control', 
            required: true, placeholder: 'Metros cubiertos'  %>
        </fieldset>
      </div>
      
      <div class="col-md-6">
        <fieldset class="form-group">
          <%= f.label :semi_built_area %>
          <%= f.number_field :semi_built_area, class: 'form-control', 
            required: true, placeholder: 'Metros semicubiertos'  %>
        </fieldset>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-6">
        <fieldset class="form-group">
          <%= f.label :perimeter %>
          <%= f.number_field :perimeter, class: 'form-control', 
            required: true, placeholder: 'Perímetro'  %>
        </fieldset>
      </div>
      <div class="col-md-6">
        <fieldset class="form-group">
          <%= f.label :year %>
          <%= f.number_field :year, class: 'form-control', 
            required: true, placeholder: 'Formato: YYYY'  %>
        </fieldset>
      </div>
    </div>

  </div>
</div>
