<div class="box box-primary">

  <div class="box-header with-border">
    <h3 class="box-title">
      <span class="fa fa-home"></span>
      Información Catastral
    </h3>
  </div>

  <div class="box-body">

    <div class="row">
      <div class="col-md-6">
        <fieldset class="form-group">
          <%= optional_label f, :built_area %>
          <%= f.number_field :built_area, class: 'form-control',
            placeholder: 'Metros cubiertos'  %>
        </fieldset>
      </div>

      <div class="col-md-6">
        <fieldset class="form-group">
          <%= optional_label f, :semi_built_area %>
          <%= f.number_field :semi_built_area, class: 'form-control',
            placeholder: 'Metros semicubiertos'  %>
        </fieldset>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <fieldset class="form-group">
          <%= optional_label f, :open_area %>
          <%= f.number_field :open_area, class: 'form-control',
            placeholder: 'Superficie descubierta'  %>
        </fieldset>
      </div>
      <div class="col-md-6">
        <fieldset class="form-group">
          <%= optional_label f, :total_area %>
          <%= f.number_field :total_area, class: 'form-control',
            placeholder: 'Metros cubiertos'  %>
        </fieldset>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <fieldset class="form-group">
          <%= optional_label f, :perimeter %>
          <%= f.number_field :perimeter, class: 'form-control',
            placeholder: 'Perímetro'  %>
        </fieldset>
      </div>
      <div class="col-md-6">
        <fieldset class="form-group">
          <%= optional_label f, :year %>
          <%= f.number_field :year, class: 'form-control',
            placeholder: 'Formato: YYYY'  %>
        </fieldset>
      </div>
    </div>

  </div>
</div>
