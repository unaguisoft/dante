<div class="box box-primary">

  <div class="box-header with-border">
    <h3 class="box-title">
      <span class="fa fa-home"></span>
      Informaci√≥n Financiera
    </h3>
  </div>

  <div class="box-body">

    <div class="row">
      <div class="col-md-8">
        <fieldset class="form-group">
          <%= f.label :price %>
          <div class="input-group">
            <span class="input-group-addon">
              <span class="fa fa-dollar"></span>
            </span>
            <%= f.number_field :price, class: 'form-control',
                  placeholder: 'Ingrese el precio' %>
          </div>
        </fieldset>
      </div>
      
      <div class="col-md-4">
        <fieldset class="form-group">
          <%= f.label :currency %>
          <%= f.select :currency,
            options_for_select(Property.currencies.map { |k, v| [k.humanize.upcase, k]}),
                  class: 'form-control' %>
        </fieldset>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-12">
        <fieldset class="form-group">
          <%= optional_label f, :expenses_cost %>
          <div class="input-group">
            <span class="input-group-addon">
              <span class="fa fa-dollar"></span>
            </span>
            <%= f.text_field :expenses_cost, class: 'form-control',
                  placeholder: 'Ingrese el valor de las expensas' %>
          </div>
        </fieldset>

      </div>
    </div>

  </div>
</div>
