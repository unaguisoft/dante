<div class="box box-primary">

  <div class="box-header with-border">
    <h3 class="box-title">
      <span class="fa fa-home"></span>
      Informaci√≥n para el sitio web
    </h3>
  </div>

  <div class="box-body">
    
    <div class="row">      
      <div class="col-md-offset-1 col-md-11">
        <fieldset class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control', required: true %>
        </fieldset>
      </div>
    </div>

    <div class="row">
      <div class="col-md-offset-1 col-md-11">
        <fieldset class="form-group">
          <%= f.check_box :should_display_on_web, class: 'inline-check-box' %>
          <%= f.label :should_display_on_web, 'Mostrar esta propiedad en la web' %>
        </fieldset>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-offset-1 col-md-11">
        <fieldset class="form-group">
          <%= f.check_box :should_highlight_on_web, class: 'inline-check-box' %>
          <%= f.label :should_highlight_on_web, 'Destacar esta propiedad en la web' %>
        </fieldset>
      </div>
    </div>

    <div class="row">      
      <div class="col-md-offset-1 col-md-11">
        <fieldset class="form-group">
          <%= f.check_box :should_display_price, class: 'inline-check-box' %> 
          <%= f.label :should_display_price, 'Mostrar el precio en la web' %>
        </fieldset>
      </div>
    </div>

  </div>
</div>
