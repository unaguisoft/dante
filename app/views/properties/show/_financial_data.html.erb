<div class="box box-primary">

  <div class="box-header with-border">
    <h3 class="box-title">
      <span class="fa fa-home"></span>
      Informaci√≥n Financiera
    </h3>
  </div>

  <div class="box-body">

    <div class="row">
      <div class="col-md-8">
        <dl>
          <dt>Precio</dt>
          <dd><%= number_to_currency property.price %></dd>
        </dl>
      </div>

      <div class="col-md-4">
        <dl>
          <dt>Moneda</dt>
          <dd><%= property.currency.humanize.upcase %></dd>
        </dl>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <dl>
          <dt>Costo de expensas</dt>
          <dd><%= number_to_currency property.expenses_cost %></dd>
        </dl>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <dl>
          <dt>Apto Banco</dt>
          <%= property.bankable? ? 'Si' : 'No' %>
        </dl>
      </div>
    </div>

  </div>

</div>
