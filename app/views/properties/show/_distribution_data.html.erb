<div class="box box-primary">

  <div class="box-header with-border">
    <h3 class="box-title">
      <span class="fa fa-home"></span>
      Información de la Distribución
    </h3>
  </div>

  <div class="box-body">

    <div class="row">
      <div class="col-md-4">
        <dl>
          <dt>Cant. de habitaciones</dt>
          <dd><%= property.number_of_bedrooms %></dd>
        </dl>
      </div>
      <div class="col-md-6">
        <dl>
          <dt>Cant. de baños</dt>
          <dd><%= property.number_of_bathrooms %></dd>
        </dl>
      </div>

      <div class="col-md-6">
        <dl>
          <dt>Cant. de toilettes</dt>
          <dd><%= property.number_of_toilets %></dd>
        </dl>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <dl>
          <dt>Cant. de plantas</dt>
          <dd><%= property.number_of_floors %></dd>
        </dl>
      </div>

      <div class="col-md-4">
        <dl>
          <dt>Cant. de ambientes</dt>
          <dd><%= property.number_of_rooms %></dd>
        </dl>
      </div>
    </div>

  </div>

</div>
