<li id="<%= dom_id(investment_photo) %>" class="col-xs-2 item text-center">
  <% if /image/ =~ investment_photo.file.mime_type %>
    <%= image_tag(investment_photo.file.thumb('200x200#').url, class: 'img-thumbnail') %>
  <% else %>
    <%= image_tag("http://placehold.it/150x150/3c8dbc/ffffff&amp;text=#{investment_photo.file.name}",
                    class: 'img-thumbnail') %>
  <% end %>
  <div class="photo-actions">
    <%= link_to icon('external-link'), investment_photo.file.url, class: 'btn btn-xs btn-primary',
           target: :blank %>
    <%= link_to icon('trash'), investment_photo, method: :delete, class: 'btn btn-xs btn-danger',
      data: { confirm: 'Â¿Seguro?', 'disable-with' => 'eliminando' }, remote: true  %>
  </div>

</li>

