<div class="box box-primary">

  <div class="box-header with-border">
    <h3 class="box-title">
      <span class="fa fa-building-o"></span>
      Información General
    </h3>
  </div>

  <div class="box-body">

    <div class="row">
      <div class="col-md-8">
        <fieldset class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control', required: true %>
        </fieldset>
      </div>
      <div class="col-md-offset-1 col-md-3" style="margin-top: 30px;">
        <fieldset class="form-group">
          <%= f.check_box :should_display_on_web, class: 'inline-check-box' %>
          <%= f.label :should_display_on_web, 'Mostrar esta inversión en la web' %>
        </fieldset>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <fieldset class="form-group">
          <%= f.label :address %>
          <%= f.text_field :address, class: 'form-control', required: true %>
        </fieldset>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <fieldset class="form-group">
          <%= f.label :details %>
          <%= f.text_area :details, class: 'form-control', required: true %>
        </fieldset>
      </div>
    </div>
  </div>
</div>
